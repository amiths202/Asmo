<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddDataActivity">
    <LinearLayout
        android:layout_margin="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <ImageButton
            android:id="@+id/backDetailsTextView"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:layout_weight="8"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_height="?actionBarSize"
            android:text="Details  "
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="35sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WHEN"
        android:padding="10dp"
        android:textSize="15sp"/>
    <TextView
        android:text="Monday, Jan 18, 2021"
        android:id="@+id/dateDetailsTextView"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="1:57 pm"
        android:id="@+id/timeDetailsTextView"
        android:layout_marginLeft="5dp"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PEAK FLOW"
        android:padding="10dp"
        android:textSize="15sp"/>
    <LinearLayout
        android:gravity="center"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="520"
            android:id="@+id/flowDetailsTextView"
            android:layout_marginLeft="5dp"
            android:textSize="30sp"
            android:layout_weight="3.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="15sp"
            android:gravity="center"
            android:layout_weight="0.75"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="l/min"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medication"
        android:padding="10dp"
        android:textSize="15sp"/>
    <TextView
        android:text="Pre-Medication"
        android:id="@+id/medicationDetailsTextView"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMMENT"
        android:padding="10dp"
        android:textSize="15sp"/>
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/commentDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-condensed"
        android:minLines="3"
        android:maxLines="5"
        android:scrollbars="vertical"
        />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:scaleType="center"
            android:src="@drawable/ic_baseline_create_24"
            android:id="@+id/editDetailsButton"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            />
        <ImageButton
            android:scaleType="center"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:id="@+id/deleteDetailsButton"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            />
    </LinearLayout>

</LinearLayout>